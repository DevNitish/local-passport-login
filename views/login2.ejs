<div>

    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" ng-model="user.email" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" ng-model="user.password" name="password">
        </div>

        <button type="submit" ng-submit="login(user)" class="btn btn-warning btn-lg">Login</button>
</div>